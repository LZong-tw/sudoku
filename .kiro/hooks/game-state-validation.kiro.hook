{
  "enabled": true,
  "name": "Game State Validation",
  "description": "Validates grid bounds, puzzle rules, and settings persistence when game files are modified",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/game-controller.js",
      "src/core/grid-model.js",
      "src/main.js"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run tests to verify:\n1. Grid values stay within valid bounds (0-9)\n2. Puzzle rules are enforced (no duplicates in row/column/box)\n3. Settings persist to localStorage correctly\n4. Settings load and apply on startup\n\nExecute relevant tests and report any violations."
  }
}
